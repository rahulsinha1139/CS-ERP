enum ComplianceCategory {
  CORPORATE_GOVERNANCE
  REGULATORY_COMPLIANCE
  TAX_COMPLIANCE
  AUDIT_COMPLIANCE
  BOARD_MATTERS
  SHAREHOLDER_MATTERS
  SECRETARIAL_COMPLIANCE
  ANNUAL_COMPLIANCE
  QUARTERLY_COMPLIANCE
  MONTHLY_COMPLIANCE
