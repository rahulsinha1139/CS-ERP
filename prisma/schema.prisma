  ADMIN
  USER
  VIEWER
}

enum InvoiceStatus {
  DRAFT
  SENT
  PAID
  PARTIALLY_PAID
  OVERDUE
  CANCELLED
}

enum PaymentMethod {
  CASH
  BANK_TRANSFER
  CHEQUE
  UPI
  CARD
  DIGITAL_WALLET
  CRYPTOCURRENCY
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

enum BillingFrequency {
  MONTHLY
  QUARTERLY
  HALF_YEARLY
  ANNUALLY
}

enum ContractStatus {
  ACTIVE
  PAUSED
  EXPIRED
  CANCELLED
}

enum ComplianceStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  OVERDUE
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum DocumentCategory {
